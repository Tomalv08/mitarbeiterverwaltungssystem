@page "/employeeList"
@inject EmployeeState EmployeeState
@using Mitarbeiterverwaltungssystem.Modals

<style>
    .list-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        padding: 20px;
    }

    .employee-card {
        width: 300px;
        margin: 20px;
        padding: 20px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        text-align: center;
    }

        .employee-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .employee-card h4 {
            margin-bottom: 10px;
        }

        .employee-card p {
            margin: 5px 0;
        }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .modal {
        display: block; /* Hidden by default */
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
        padding-top: 60px;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 8px;
        text-align: center;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<h3>Employee List</h3>
<div class="list-container">
    @foreach (var employee in EmployeeState.Employees)
    {
        <div class="employee-card">
            <h4>@employee.Name</h4>
            <p><strong>Position:</strong> @employee.Position</p>
            @if (employee is Manager manager)
            {
                <p><strong>Department:</strong> @manager.Department</p>
            }
            <button @onclick="() => ShowDetails(employee)" class="btn-info">View Details</button>
        </div>
    }
</div>

@if (selectedEmployee != null)
{
    <div class="modal">
        <div class="modal-content">
            <span class="close" @onclick="CloseModal">&times;</span>
            <h2>Employee Details</h2>
            <p><strong>Name:</strong> @selectedEmployee.Name</p>
            <p><strong>Position:</strong> @selectedEmployee.Position</p>
            @if (selectedEmployee is Manager selectedManager)
            {
                <p><strong>Department:</strong> @selectedManager.Department</p>
            }
        </div>
    </div>
}

@code {
    private Employee selectedEmployee;

    private void ShowDetails(Employee employee)
    {
        selectedEmployee = employee;
    }

    private void CloseModal()
    {
        selectedEmployee = null;
    }
}
